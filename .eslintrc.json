{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "airbnb-base"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "guard-for-in": ["off"],
        "no-param-reassign": ["off"],
        "no-restricted-syntax": ["error", "WithStatement"],
        "vue/multi-word-component-names": ["error", {
            "ignores": ["Board", "Game"]
        }]
    }
}
